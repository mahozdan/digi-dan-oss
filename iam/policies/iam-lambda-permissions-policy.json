{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "DynamoDBWriteApplications",
      "Effect": "Allow",
      "Action": "dynamodb:PutItem",
      "Resource": "arn:aws:dynamodb:il-central-1:*:table/community-applications"
    },
    {
      "Sid": "CloudWatchLogs",
      "Effect": "Allow",
      "Action": [
        "logs:CreateLogGroup",
        "logs:CreateLogStream",
        "logs:PutLogEvents"
      ],
      "Resource": "arn:aws:logs:il-central-1:*:*"
    },
    {
      "Sid": "SESSendNotifications",
      "Effect": "Allow",
      "Action": "ses:SendEmail",
      "Resource": "*",
      "Condition": {
        "StringEquals": {
          "aws:RequestedRegion": "il-central-1"
        }
      }
    }
  ]
}
